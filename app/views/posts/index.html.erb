<div class="body">
  <p id="notice"><%= notice %></p>

  <h1 class="title">Posts</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr class="flex">
          <td class="post-title"><%= post.title %></td>
          <td class="post-author"><%= show_author(post) %></td>
          <td class="post-content"><%= post.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= new_post %>
</div>
