<div class="body">
  <p id="notice"><%= notice %></p>

  <h1 class="title">Posts</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr class="flex">
          <td class="post-title"><%= post.title %></td>
          <% if user_signed_in? %>
            <td class="post-author">by: <%= post.user.author %></td>
          <% end %>
          <td class="post-content"><%= post.content %></td>
           <% if user_signed_in? %>
            <td class="options"><%= link_to 'Edit', edit_post_path(post) %></td>
            <td class="options"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>


  <span class="new"><%= link_to 'New Post', new_post_path %></span>
</div>

