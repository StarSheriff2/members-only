<div class="body">
  <p id="notice"><%= notice %></p>

  <h1 class="title">Posts</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="content"><%= post.content %></td>
          <%# <td><%=  post.users.author %></td>
          <td class="options"><%= link_to 'Edit', edit_post_path(post) %></td>
          <td class="options"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <span class="new"><%= link_to 'New Post', new_post_path %></span>
</div>

